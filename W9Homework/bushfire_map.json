{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australian Bushfire Hotspots (2024)",
  "width": 800,
  "height": 500,
  "projection": {
    "type": "mercator",
    "center": [
      133.7751,
      -25.2744
    ],
    "scale": 600
  },
  "layer": [
    {
      "data": {
        "graticule": true
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#ccc",
        "fill": "transparent",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/rowanhogan/australian-states/master/states.geojson",
        "format": {
          "type": "json"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "transparent",
        "stroke": "black"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/grace-personal22/FIT3179/main/modis_2024_Australia.csv"
      },
      "transform": [
        {
          "filter": "datum.frp > 0"
        },
        {
          "sample": 5000
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.7
      },
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {
          "field": "frp",
          "type": "quantitative",
          "scale": {
            "type": "sqrt",
            "domain": [
              0,
              5200
            ]
          },
          "legend": {
            "title": "Fire Radiative Power (MW)"
          }
        },
        "color": {
          "field": "confidence",
          "type": "quantitative",
          "scale": {
            "domain": [
              0,
              100
            ],
            "range": [
              "#ffffb2",
              "#fd8d3c",
              "#bd0026"
            ]
          },
          "legend": {
            "title": "Detection Confidence"
          }
        },
        "tooltip": [
          {
            "field": "acq_date",
            "type": "temporal",
            "title": "Date"
          },
          {
            "field": "frp",
            "type": "quantitative",
            "title": "FRP (MW)"
          },
          {
            "field": "confidence",
            "type": "quantitative",
            "title": "Confidence"
          }
        ]
      }
    }
  ]
}