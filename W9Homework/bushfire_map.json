{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australian Bushfire Hotspots (2024)",
  "width": 800,
  "height": 500,
  "projection": {
    "type": "mercator",
    "center": [133.7751, -25.2744],
    "scale": 600
  },
  "layer": [
    {
      "data": {"graticule": true},
      "mark": {"type": "geoshape", "stroke": "#ccc", "fill": "transparent", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/rowanhogan/australian-states/master/states.geojson",
        "format": {"type": "json"}
      },
      "mark": {"type": "geoshape", "fill": "transparent", "stroke": "black"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/grace-personal22/FIT3179/main/modis_2024_Australia.csv"
      },
      "transform": [
        {"filter": "datum.frp > 0"},
        {"filter": "datum.confidence >= 50"},
        {"sample": 5000}
      ],
      "mark": {"type": "circle", "size": 70, "opacity": 0.7},
"encoding": {
  "longitude": {"field": "longitude", "type": "quantitative"},
  "latitude": {"field": "latitude", "type": "quantitative"},
  "color": {
    "field": "frp",
    "type": "quantitative",
    "scale": {
      "type": "log",
      "domain": [1, 5200],
      "range": ["#ffffb2","#fecc5c","#fd8d3c","#f03b20","#bd0026"]
    },
    "legend": {"title": "Fire Intensity (MW)"}
  },
  "tooltip": [
    {"field": "acq_date", "type": "temporal", "title": "Date"},
    {"field": "frp", "type": "quantitative", "title": "FRP (MW)"},
    {"field": "confidence", "type": "quantitative", "title": "Confidence"}
  ]
}

    }
  ]
}
